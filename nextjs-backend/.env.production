# Render.com Production Environment Variables
# These will be overridden by Render's environment variables

NODE_ENV=production
PORT=10000

# Database Configuration
MONGODB_URI=mongodb+srv://alcolic:alcolic123@cluster0.mongodb.net/alcolic_db?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://alcolic-frontend.onrender.com,https://alcolic-store-admin.onrender.com,https://alcolic-main-admin.onrender.com

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/tmp/uploads

# Redis (Optional for caching)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info